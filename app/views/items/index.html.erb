<!-- details card section starts from here -->

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h2 class="deepshd"> ITEMS</h2>
    <p class="lead"></p>
  </div>
</div>

<section class="details-card">
    <div class="container-fluid">
        <div class="row">
          <% @items.each do |item| %>
              <div class="col-md-4 p-3">
                <div class="card-content">
                    <div class="card-img">
                        <img src="<%= item.image %>" alt="">
                        <div class="card-header">
                          <h1 class="card-title text-center"><%= link_to (item.name), item_path(item), {:style=>"color:black;"} %></h1>
                        </div>
                    </div>
                      <div class="card-desc card-footer">
                        <p><%= item.description %></p>
                        <p><%= item.price %> <%= item.status %> <%= item.inventory %></p>
                        <p><%= %>
                      </div>
                </div>
              </div>
          <% end %>
        </div>
    </div>
</section>

<button type="button" class="btn btn-dark btn-lg btn-block"><%= link_to 'New Merchant', new_item_path, {:style=>"color:#fff;"} %></button>
