    <%= form.text_area :description, id: :item_description %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :item_price %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image, id: :item_image %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.check_box :status, id: :item_status %>
  </div>

  <div class="field">
    <%= form.label :inventory %>
    <%= form.number_field :inventory, id: :item_inventory %>
  </div>

  <div class="field">
    <%= form.label :merchant_id %>
    <%= form.text_field :merchant_id, id: :item_merchant_id %>
  </div>

